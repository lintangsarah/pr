<h1>New</h1>
<% if !@post.errors.empty? %>
	<% @post.errors.full_messages.each do |error| %>
		<h4 style="color:red;"><%= error %></h4>
	<%end %>
	<% end %>
<%= form_for @post do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :longitude %>
	<%= f.text_field :longitude %>
	<br>
	<%= f.label :latitude %>
	<%= f.text_field :latitude %>
	<br>
	<%= f.submit %>
	<% end %>